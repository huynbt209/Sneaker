@model System.Collections.Generic.IEnumerable<Sneaker.Models.Product>

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="section-title">
                <h2>New Product </h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="product-info">
                <div class="nav-main">
                </div>
                <div class="tab-content" id="myTabContent">
                    <!-- Start Single Tab -->
                    <div class="tab-pane fade show active" id="man" role="tabpanel">
                        <div class="tab-single">
                            <div class="row">
                                @foreach (var product in Model)
                                {                              
                                    <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                        <div class="single-product">
                                            <div class="name">
                                                <span>@product.Trademark.TrademarkName</span>
                                            </div>
                                            <div class="product-img">
                                                <a href="/Product/ProductDetails/@product.Id">
                                                    <img class="default-img" src="@product.Image" alt="#">
                                                    <img class="hover-img" src="@product.Image" alt="#">
                                                    @if (product.Badge != null)
                                                    {<span class="new">@product.Badge</span>}
                                                </a>
                                                <div class="button-head">
                                                    <div class="product-action">
                                                        <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#">
                                                            <i class=" ti-eye"></i><span>Quick Shop</span>
                                                        </a>
                                                        <a title="Wishlist" href="#">
                                                            <i class=" ti-heart "></i><span>Add to Wishlist</span>
                                                        </a>
                                                        <a title="Compare" href="#">
                                                            <i class="ti-bar-chart-alt"></i><span>Add to Compare</span>
                                                        </a>
                                                    </div>
                                                    <div class="product-action-2">
                                                        <a title="Add to cart" asp-action="AddCart" asp-controller="Cart" asp-route-id="@product.Id">Add to cart</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="product-content">
                                                <h3>
                                                    <a href="/Product/ProductDetails/@product.Id">@product.ProductName</a>
                                                </h3>
                                                <div class="product-price">
                                                    <span>@product.Price</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                    <!--/ End Single Tab -->
                </div>
            </div>
        </div>
    </div>
</div>