@model IEnumerable<Sneaker.Models.Invoice>
@{
    ViewBag.Title = "index";
    Layout = "_AdminLayout";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <h3 class="page-title"> Overview</h3>
    </div>
</div>
<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive-xl table mt-2">
            <table class="table my-0 table-hover" id="invoiceTable">
                <thead class="thead-light">
                </thead>
            </table>
        </div>
    </div>
</div>

<div>
    <partial name="_Remove" />
</div>

@section scripts {
    <script>
        var table = $(document).ready(function () {
            $('#invoiceTable').DataTable({
                info: false,
                ajax: {
                    url: '/Admin/GetUserInvoice',
                    dataSrc: ''
                },
                rowId: "id",
                columns: [
                    {
                        data: 'paymentId', title: 'Payment Code', render: function (data, row) {
                            return '<p id="paymentId' + row.id + '">' + data + '</p>';
                        }
                    },
                    {
                        data: 'isTeamOrder', title: 'Team Order'
                    },
                    {
                        data: 'status', title: 'Status'
                    },
                    {
                        data: 'createAt', title: "Create At"
                    },
                ],
                order: [1, 'asc']
            });
            $('#invoiceTable tbody').on('click', 'tr', function () {
                const invoiceId = $(this).closest('tr').attr('id');
                window.location.href = '/Admin/UserInvoiceDetail/' + invoiceId;
            });
        });
    </script>
}
