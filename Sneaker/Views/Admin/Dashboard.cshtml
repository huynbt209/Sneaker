@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@using System.Security.Claims
@{
    ViewData["Title"] = "dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 mb-1 mt-2 ">
        <div class="card card-small h-100">
            <div class="card-header border-bottom">
                <h6 class="m-0">Count Products in Trademark</h6>
            </div>
            <div class="card-body d-flex py-0">
                <canvas id="itemChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 mb-1 mt-2 ">
            <div class="card card-small h-100">
                <div class="card-header border-bottom">
                    <h6 class="m-0">Count Products in Invoice Of Trademark</h6>
                </div>
                <div class="card-body d-flex py-0">
                    <canvas id="itemInvoiceChart"></canvas>
                </div>
            </div>
        </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js" integrity="sha512-hZf9Qhp3rlDJBvAKvmiG+goaaKRZA6LKUO35oK6EsM0/kjPK32Yw7URqrq3Q+Nvbbt8Usss+IekL7CRn83dYmw==" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {

        var labelBarChart = JSON.parse('@Html.Raw(Json.Serialize(ViewBag.TrademarkList))');
        var dataBarChart = JSON.parse('@Html.Raw(Json.Serialize(ViewBag.CountItemOfTrademark))');
        var dataItemBarChart = JSON.parse('@Html.Raw(Json.Serialize(ViewBag.CountItemInInvoiceOfTrademark))');


        var coloR = [];
        var dynamicColors = function () {
            var randomColor = Math.floor(Math.random() * 16777215).toString(16);
            return "#"+randomColor;
        };
        for (var i = 0; i < labelBarChart.length; i++) {
            coloR.push(dynamicColors());
        }

        var bar = $("#itemChart");
        var itemChart = new Chart(bar, {
            type: 'bar',
            data: {
                labels: labelBarChart,
                datasets: [{
                    data: dataBarChart,
                    backgroundColor: ['#ffefa1', '#94ebcd', '#6ddccf', '#ff75a0', '#ffcb91', '#383e56', '#4a47a3'],
                    borderColor: '#4a47a3',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    xAxes: [{
                        ticks: {
                            autoSkip: false,
                            beginAtZero: true,
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                },
                legend: {
                    display: false
                }
            }
        });
        var barChart = $("#itemInvoiceChart");
                var itemInvoiceChart = new Chart(barChart, {
                    type: 'bar',
                    data: {
                        labels: labelBarChart,
                        datasets: [{
                            data: dataItemBarChart,
                            backgroundColor: ['#ffefa1', '#94ebcd', '#6ddccf', '#ff75a0', '#ffcb91', '#383e56', '#4a47a3'],
                            borderColor: '#4a47a3',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            xAxes: [{
                                ticks: {
                                    autoSkip: false,
                                    beginAtZero: true,
                                }
                            }],
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        },
                        legend: {
                            display: false
                        }
                    }
                });

    });
    </script>
}
