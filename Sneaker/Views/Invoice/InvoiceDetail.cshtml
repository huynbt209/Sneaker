@model Sneaker.ViewModel.InvoiceDetailsViewModel

@{
    ViewBag.Title = "Invoice Details";
    Layout = "_UserLayout";
}

<div class="row">
    <div class="col-12">
        <div class="section-title">
            <h2>Invoice Overview</h2>
        </div>
    </div>
</div>
<input id="InvoiceId" type="hidden" value="@Model.Invoice.Id" />
<div class="shopping-cart section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table shopping-summery">
                    <thead>
                        <tr class="main-hading">
                            <th>Products Image</th>
                            <th>Products Name</th>
                            <th>Products Price</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Order Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                <td class="image" data-title="Image">
                                    <img src="@item.Product.Image" />
                                </td>
                                <td class="name" data-title="Name">
                                    <span>@item.Product.ProductName </span>
                                </td>
                                <td class="price" data-title="Price">
                                    <span>@item.Product.Price </span>
                                </td>
                                <td class="price" data-title="Price">
                                    <span>@item.Price </span>
                                </td>
                                <td class="text" data-title="Quantity">
                                    <span>@item.Quantity </span>
                                </td>
                                <td class="date" data-title="Date">
                                    <span>@item.CreateAt</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>