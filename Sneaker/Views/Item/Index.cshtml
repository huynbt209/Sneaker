@model IEnumerable<Trademark>

@{
    ViewBag.Title = "Index";
    Layout = "_AdminLayout";
}
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Dashboard</span>
        <h3 class="page-title">Product Overview</h3>
    </div>
    <div class="col-12 mt-3">
        <a asp-controller="Item" asp-action="ListAllProduct" class="btn btn-primary">
            View All Product
        </a>
    </div>
</div>

<div class="row mt-2">
    @foreach (var item in Model)
    {
        <div class="mr-1 ml-1 card" style="width: 18rem;">
            <img src="~/trademarks/@item.Image"  class="avatar" width="100" height="100" alt="@item.TrademarkName">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(m => item.TrademarkName)</h5>
                <p class="card-text">@Html.DisplayFor(m => item.Description)</p>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-success text-white mr-1" asp-action="ListProducts" asp-route-id="@item.Id">View Product</a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-info" asp-action="ListProductSale" asp-route-id="@item.Id">Product Sale</a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-info" asp-action="ListProductNew" asp-route-id="@item.Id">Product New</a>
                </div>
            </div>
        </div>
    }
</div>