@using Microsoft.AspNetCore.Routing
@model System.Collections.Generic.IEnumerable<Sneaker.Models.Item>
@{
    ViewBag.Title = "list";
    Layout = "_AdminLayout";
}


<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Dashboard</span>
        <h3 class="page-title">Product Overview</h3>
    </div>
</div>
<div class="col-12 mt-3">
    <a asp-controller="Item" asp-action="ExportToExcel" class="btn btn-primary">
        Export Product to Excel
    </a>
</div>
<div class="col-12 mt-3">
    <a asp-controller="Item" asp-action="Uploads" class="btn btn-primary">
        Import Product from Excel
    </a>
</div>
<div class="col-12 mt-3">
    <a asp-controller="Item" asp-action="CreateProduct" class="btn btn-primary">
        Create New Product
    </a>
</div>
<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive-xl table mt-2">
            <table class="table my-0 table-hover" id="productTable">
                <thead class="thead-light">
                </thead>
            </table>
        </div>
    </div>
</div>
<div>
    <partial name="_Remove"/>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#productTable').DataTable({
                "processing": true,
                ajax: {
                    url: '/Item/GetAllProduct/',
                    dataSrc: ''
                },
                rowId: "id",
                columns: [
                    {
                        data: "productName", title: "Product Name", render: function (data, type, row) {
                            return '<p id="ProductName' + row.id + '">' + data + '</p>';
                        }
                    },
                    { data: "price", title: "Price" },
                    { data: "badge", title: "Badge" },
                    { data: "category", title: "Category" },
                    {
                        data: 'image', title: 'Image', render: function (data) {
                            return '<img src=' + data + ' class="avatar" width="100" height="100"/>';
                        }
                    },
                    {
                        data: 'id', title: 'Action', render: function (data) {
                            return '<a href="/Item/EditProduct/' + data + '"class="btn btn-success mr-1"> Edit </a> '
                                + '<a id="DeleteHandleClick" class="btn btn-danger mr-1 text-white" data-toggle="modal" data-target="#delModal"> Remove </a>'
                                + '<a href="/Item/ProductDetails/' + data + '" class="btn btn-info mr-1"> Details </a>';
                        }
                    }
                ],
                order: [1, 'asc']
            });
            $('#productTable tbody').on('click', 'tr','#DeleteHandleClick', function () {
               var productID = $(this).closest('tr').attr('id');
               document.getElementById('handleDeleteClick').setAttribute("href", "/Item/RemoveProduct/" + productID);
               document.getElementById('modalTitle').innerText = "Are You Sure You Want To Remove This Product?";
            });
        });
    </script>
}