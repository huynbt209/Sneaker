@model Sneaker.ViewModel.ItemTrademarkViewModel
@{
    ViewBag.Title = "Create";
    Layout = "_AdminLayout";
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateProduct" asp-controller="Item" id="SubmitForm" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.Title" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.Title" class="form-control" />
                    <span asp-validation-for="Items.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.TitleURL" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.TitleURL" class="form-control" />
                    <span asp-validation-for="Items.TitleURL" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.ProductName" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.ProductName" class="form-control" />
                    <span asp-validation-for="Items.ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.Image" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.Image" class="form-control" />
                    <span asp-validation-for="Items.Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.Quantity" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.Quantity" class="form-control" />
                    <span asp-validation-for="Items.Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.Price" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.Price" class="form-control" />
                    <span asp-validation-for="Items.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.Badge" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.Badge" class="form-control" />
                    <span asp-validation-for="Items.Badge" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.Category" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.Category" class="form-control" />
                    <span asp-validation-for="Items.Category" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.Status" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Items.Status" class="form-control" />
                    <span asp-validation-for="Items.Status" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Items.TrademarkId" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <select asp-for="@Model.Items.TrademarkId" asp-items="@Model.Trademarks.Select(f => new SelectListItem {Text = f.TrademarkName.ToString(), Value = f.Id.ToString()})" class="form-control"></select>
                </div>
            </div>

        </form>
        <div class="row">
            <div class="col-md-9 col-lg-8"></div>
            <div class="col-md-3 col-lg-4">
                <input type="submit" form="SubmitForm" class="btn w-100 btn-accent" value="Create" />
            </div>
        </div>
    </div>
</div>