@model Sneaker.Models.ShoppingCart

@{
    Layout = null;
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <h3 class="page-title">Create Cart</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-md-12">
        <div class="card card-small mb-3">
            <div class="card-body">
                <form method="post" asp-action="CreateCart" id="SubmitForm" class="add-new-post">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <label asp-for="OwnerName" class="col-form-label"></label>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="OwnerName" class="form-control" />
                            <span asp-validation-for="OwnerName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <label asp-for="Note" class="col-form-label"></label>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="Note" class="form-control" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-md-9 col-lg-8"></div>
                    <div class="col-md-3 col-lg-4">
                        <input type="submit" form="SubmitForm" class="btn w-100 btn-accent" value="Create" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
