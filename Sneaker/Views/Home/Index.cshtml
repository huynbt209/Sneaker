<!-- Slider Area -->
<section class="hero-slider">
    <!-- Single Slider -->
    <div class="single-slider">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-9 offset-lg-3 col-12">
                    <div class="text-inner">
                        <div class="row">
                            <div class="col-lg-7 col-12">
                                <div class="hero-text">
                                    <h1><span>Nike Sale 50% </span>Sneaker</h1>
                                    <div class="button">
                                        <a asp-controller="User" asp-action="ListSale" asp-route-id="7" class="btn">Buy Now!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ End Single Slider -->
</section>
<!--/ End Slider Area -->
<!-- Start Small Banner  -->
<section class="small-banner section">
    <div class="container-fluid">
        <div class="row">
            <!-- Single Banner  -->
            <div class="col-lg-4 col-md-6 col-12">
                <div class="single-banner">
                    <img src="/View/AdidasView.jpg" width="600" height="370" alt="adidas">
                    <div class="content">
                        <p>Adidas Sneaker</p>
                        <h3>Summer travel <br> collection</h3>
                        <a asp-controller="User" asp-action="ListNew" asp-route-id="10">Discover Now</a>
                    </div>
                </div>
            </div>
            <!-- /End Single Banner  -->
            <!-- Single Banner  -->
            <div class="col-lg-4 col-md-6 col-12">
                <div class="single-banner">
                    <img src="/View/ReebokView.jpg" width="600" height="370" alt="adidas">
                    <div class="content">
                        <p>Reebok Sneaker</p>
                        <h3>Find your style today<br> collection</h3>
                        <a asp-controller="User" asp-action="ListNew" asp-route-id="9">Discover Now</a>
                    </div>
                </div>
            </div>
            <!-- /End Single Banner  -->
            <!-- Single Banner  -->
            <div class="col-lg-4 col-12">
                <div class="single-banner tab-height">
                    <img src="/View/VanView.jpg" width="600" height="370" alt="adidas">
                    <div class="content">
                        <p>Van Sneaker</p>
                        <h3>Get Free Shipping & Free Returns 24/7! <br> collection</h3>
                        <a asp-controller="User" asp-action="ListNew" asp-route-id="8">Discover Now</a>
                    </div>
                </div>
            </div>
            <!-- /End Single Banner  -->
        </div>
    </div>
</section>
<!-- End Small Banner -->
<!-- Start Product Area -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="section-title">
                <h2>Trending Item</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="product-info">
                <div class="tab-content" id="myTabContent">
                    <!-- Start Single Tab -->
                    <div class="tab-single">
                        <div class="row">
                            @foreach (var item in Model.trendingProducts)
                            {
                                <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                    <div class="single-product">
                                        <div class="product-img">
                                            <a href="/Item/ProductDetails/@item.Id">
                                                <img class="default-img" src="@item.Image" alt="#">
                                                <img class="hover-img" src="@item.Image" alt="#">
                                                <span class="new">Trending</span>
                                            </a>
                                            <div class="button-head">
                                                <div class="product-action">
                                                    <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#">
                                                        <i class=" ti-eye"></i><span>Quick Shop</span>
                                                    </a>
                                                    <a title="Wishlist" href="#">
                                                        <i class=" ti-heart "></i><span>Add to Wishlist</span>
                                                    </a>
                                                    <a title="Compare" href="#">
                                                        <i class="ti-bar-chart-alt"></i><span>Add to Compare</span>
                                                    </a>
                                                </div>
                                                <div class="product-action-2">
                                                    <a type="button" class="add-to-cart" data-id="@item.Id">Add to cart</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <h3 class="name">
                                                <span>@item.Trademark.TrademarkName</span>
                                            </h3>
                                            <h3>
                                                <a href="/Product/ProductDetails/@item.Id">@item.ProductName</a>
                                            </h3>
                                            <div class="product-price">
                                                <span>$@item.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!--/ End Single Tab -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Product Area -->
<!-- Start Most Popular -->
<div class="product-area most-popular section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>Hot Item</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="owl-carousel popular-slider">
                    <!-- Start Single Product -->
                    @foreach (var item in Model.hotProducts)
                    {
                        <div class="single-product">
                            <div class="product-img">
                                <a href="/Item/ProductDetails/@item.Id">
                                    <img src="@item.Image" alt="HTML tutorial">
                                    <span class="out-of-stock">Hot</span>
                                </a>
                                <div class="button-head">
                                    <div class="product-action">
                                        <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#">
                                            <i class=" ti-eye"></i><span>Quick Shop</span>
                                        </a>
                                        <a title="Wishlist" href="#">
                                            <i class=" ti-heart "></i><span>Add to Wishlist</span>
                                        </a>
                                        <a title="Compare" href="#">
                                            <i class="ti-bar-chart-alt"></i><span>Add to Compare</span>
                                        </a>
                                    </div>
                                    <div class="product-action-2">
                                        <a type="button" class="add-to-cart" data-id="@item.Id">Add to cart</a>
                                    </div>
                                </div>
                            </div>
                            <div class="product-content">
                                <h3 class="name">
                                    <span>@item.Trademark.TrademarkName</span>
                                </h3>
                                <h3>
                                    <a href="/Item/ProductDetails/@item.Id">@item.ProductName</a>
                                </h3>
                                <div class="product-price">
                                    <span>$@item.Price</span>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- End Single Product -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Most Popular Area -->
