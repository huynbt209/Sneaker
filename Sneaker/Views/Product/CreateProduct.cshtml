@model Sneaker.ViewModel.ProductTrademarkViewModel
@{
    ViewBag.Title = "Create";
    Layout = "_AdminLayout";
}





<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateProduct" asp-controller="Product" id="SubmitForm" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.Title" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.Title" class="form-control" />
                    <span asp-validation-for="Products.Title" class="text-danger"></span>
                </div>
            </div>
            @* <div class="form-group row"> *@
            @*     <div class="col-lg-12"> *@
            @*         <label asp-for="Product.Id" class="col-form-label"></label> *@
            @*     </div> *@
            @*     <div class="col-lg-5"> *@
            @*         <input asp-for="Product.Id" class="form-control" /> *@
            @*         <span asp-validation-for="Product.Id" class="text-danger"></span> *@
            @*     </div> *@
            @* </div> *@
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.TitleURL" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.TitleURL" class="form-control" />
                    <span asp-validation-for="Products.TitleURL" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.ProductName" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.ProductName" class="form-control" />
                    <span asp-validation-for="Products.ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.Image" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.Image" class="form-control" />
                    <span asp-validation-for="Products.Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.Quantity" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.Quantity" class="form-control" />
                    <span asp-validation-for="Products.Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.Price" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.Price" class="form-control" />
                    <span asp-validation-for="Products.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.Badge" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.Badge" class="form-control" />
                    <span asp-validation-for="Products.Badge" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.Category" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.Category" class="form-control" />
                    <span asp-validation-for="Products.Category" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.Status" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Products.Status" class="form-control" />
                    <span asp-validation-for="Products.Status" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Products.TrademarkId" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <select asp-for="@Model.Products.TrademarkId" asp-items="@Model.Trademarks.Select(f => new SelectListItem {Text = f.TrademarkName.ToString(), Value = f.Id.ToString()})" class="form-control"></select>
                </div>
            </div>

        </form>
        <div class="row">
            <div class="col-md-9 col-lg-8"></div>
            <div class="col-md-3 col-lg-4">
                <input type="submit" form="SubmitForm" class="btn w-100 btn-accent" value="Create" />
            </div>
        </div>
    </div>
</div>