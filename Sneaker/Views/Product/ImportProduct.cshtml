@model Sneaker.ViewModel.ProductTrademarkViewModel
@{
    ViewBag.Title = "Import";
    Layout = "_AdminLayout";
}





<div class="row">
    <div class="col-md-12">
        <form asp-action="ImportProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Upload file</label>
                <input id="fileSelect" name="file" class="form-control" type="file" multiple>
                <button type="submit" id="thisButton" class="btn btn-success">Upload Products</button>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.TrademarkId" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <select asp-for="@Model.Product.TrademarkId" asp-items="@Model.Trademarks.Select(f => new SelectListItem {Text = f.TrademarkName.ToString(), Value = f.Id.ToString()})" class="form-control"></select>
                </div>
            </div>
        </form>
    </div>
</div>