@model Sneaker.ViewModel.ProductTrademarkViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "_AdminLayout";
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateProduct" asp-controller="Product" id="SubmitForm" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.Title" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.Title" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.Id" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.Id" class="form-control" />
                    <span asp-validation-for="Product.Id" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.TitleURL" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.TitleURL" class="form-control" />
                    <span asp-validation-for="Product.TitleURL" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.ProductName" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.ProductName" class="form-control" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.Image" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.Image" class="form-control" />
                    <span asp-validation-for="Product.Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.Quantity" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.Quantity" class="form-control" />
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.Price" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.Badge" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.Badge" class="form-control" />
                    <span asp-validation-for="Product.Badge" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.Category" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.Category" class="form-control" />
                    <span asp-validation-for="Product.Category" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.Status" class="col-form-label"></label>
                </div>
                <div class="col-lg-5">
                    <input asp-for="Product.Status" class="form-control" />
                    <span asp-validation-for="Product.Status" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label asp-for="Product.TrademarkId" class="col-form-label"></label>
                </div>
            </div>

        </form>
        <div class="row">
            <div class="col-md-9 col-lg-8"></div>
            <div class="col-md-3 col-lg-4">
                <input type="submit" form="SubmitForm" class="btn w-100 btn-accent" value="Create" />
            </div>
        </div>
    </div>
</div>